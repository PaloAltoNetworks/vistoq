<ipsec>
  <entry name="{{ VPN_REMOTE_SITE }}">
    <auto-key>
      <ike-gateway>
        <entry name="{{ VPN_REMOTE_SITE }}"/>
      </ike-gateway>
    </auto-key>
    <tunnel-monitor>
      <enable>yes</enable>
      <destination-ip>{{ VPN_PEER_IP }}</destination-ip>
      <tunnel-monitor-profile>default</tunnel-monitor-profile>
    </tunnel-monitor>
    <tunnel-interface>tunnel</tunnel-interface>
  </entry>
</ipsec>